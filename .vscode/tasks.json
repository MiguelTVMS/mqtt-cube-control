{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/MqttCubeControll/MqttCubeControll.App/MqttCubeControl.App.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/MqttCubeControll/MqttCubeControll.App/MqttCubeControl.App.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}